<EmberNativeScrollable
  @content-size={{_contentSize}} @scroll-left={{_scrollLeft}} @scroll-top={{_scrollTop}}
  @scrollChange={{action "scrollChange"}} @clientSizeChange={{action "clientSizeChange"}}>
  {{#if (has-block "stats")}}
    {{yield to="stats"}}
  {{/if}}

  {{yield _cells to="content"}}

  {{#unless isReached}}
    <div class="table-fluid-loader">
      <div class="profile-description">
        <div class="profile-description__avatar"></div>
        <div class="profile-description__content">
          <div class="placeholder-line"></div>
          <div class="placeholder-lineine"></div>
        </div>
      </div>

      <div class="serp-content-list">
        <div class="placeholder-image"></div>
        <div class="placeholder-image"></div>
        <div class="placeholder-image"></div>
      </div>

      <div class="serp-audience">
      </div>
    </div>
  {{/unless}}
</EmberNativeScrollable>
