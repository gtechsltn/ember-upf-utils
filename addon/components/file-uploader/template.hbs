{{#if _onUpload}}
  <div class="upload-progress-contianer">
    <i class="fa fa-spinner fa-spin"></i> {{_file.name}}
    {{#if useProgress}}
      <div class="upload-progress-bar">
        <div class="upload-progress" style="width: {{_progress}}%"></div>
      </div>
    {{/if}}
  </div>
{{else if hasFile}}
  {{_file.name}}
  <button class="upf-btn upf-btn--secondary upf-btn--x-small" disabled={{not isValid}} {{action 'upload'}}>
    <span>Upload</span>
  </button>
  <button class="upf-btn upf-btn--orange--reversed upf-btn--x-small" {{action 'clear'}}>
    <i class="fa fa-times"></i>
  </button>
{{else}}
  <div class="file-uploader__btn upf-btn upf-btn--secondary upf-btn--x-small">
    <span>{{text}}</span>
    {{input-uploader onFile=(action 'onFile')}}
  </div>
{{/if}}
