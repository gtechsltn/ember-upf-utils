{{#if multiple}}
  {{#power-select-multiple options=items selected=selection placeholder=placeholder
    renderInPlace=true disabled=disabled onchange=(action (mut selection)) as |item|}}
    {{get item optionLabelPath}}
  {{/power-select-multiple}}
{{else}}
  {{#power-select options=items selected=selection onchange=(action (mut selection)) value=optionValuePath
    placeholder=placeholder renderInPlace=true disabled=disabled searchField=sortField oninput=(action "updateSearchTerm")
    afterOptionsComponent=(if createItemComponent (
                            component createItemComponent searchTerm=searchTerm createButtonTextTemplate=createOptionPlaceholder
                                      recordTypeIsModel=recordTypeIsModel recordType=recordType selection=selection mutliple=mutliple
                                      didCreate=(if didCreate (action didCreate)))
                          ) as |item|}}
    {{get item optionLabelPath}}
  {{/power-select}}
{{/if}}
