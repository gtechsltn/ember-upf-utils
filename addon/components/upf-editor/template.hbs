{{summer-note
  height=height btnSize=btnSize content=(readonly content)
  onContentChange=(action "onContentChange") uploaderHeaders=uploaderHeaders
  customButtons=_customButtonsFuncs}}

{{#modal-view
  hidden=hideVideoUploadModal closeAction=(action "toggleVideoUpload")
  title=(t "summernote_modals.video.title") centered=true}}
  {{summernote-modals/video
    editor-context=summernoteContext uploaderHeaders=uploaderHeaders
    uploaderExtra=uploaderExtra closeModal=(action "toggleVideoUpload")}}
{{/modal-view}}

{{#modal-view
  hidden=hidePDFUploadModal closeAction=(action "togglePDFUpload")
  title=(t "summernote_modals.pdf.title") centered=true}}
  {{summernote-modals/pdf
    editor-context=summernoteContext uploaderHeaders=uploaderHeaders
    uploaderExtra=uploaderExtra closeModal=(action "togglePDFUpload")}}
{{/modal-view}}
