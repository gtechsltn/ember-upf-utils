{{#modal-view hidden=hidden closeAction=closeModal}}
  <div class="modal-header modal-header__borderless">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
            id='close-x'><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Import Influencers</h4>
  </div>

  <div class="modal-body text-center">
  <div class="row">
    <div class="col-sm-12">
      {{item-chooser items=items selection=current
                     recordTypeIsModel=false canCreate=_canCreate
                     optionValuePath='content.identifier'
                     createOptionPlaceholder=createOptionPlaceholder
                     didCreate=(action 'didCreateItem') placeholder=placeholder
                     search=(action "searchEntities")}}
      {{#if errors}}
        <div class="alert alert-danger">
          {{#each errors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      {{/if}}
    </div>
  </div>
</div>

<div class="modal-footer">
  {{#loading-button current slowAction='submit' initiallyDisabled=true
                    class='margin-left-xx-sm upf-btn upf-btn--primary'}}
    Import Influencers
  {{/loading-button}}
</div>
{{/modal-view}}