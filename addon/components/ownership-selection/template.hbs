{{#if display}}
  {{#if _toggled}}
    {{ember-selectize content=ownerships selection=ownership
                      classNames='ember-selectize--small'
                      optionValuePath='content.id'
                      optionLabelPath='content.name'
                      placeholder='Share with'
                      multiple=false}}
  {{else}}
    <button {{action 'toggle'}} class="upf-btn upf-btn--secondary upf-btn--dark-bg upf-btn--small">
      <i class="fa fa-share-alt" aria-hidden="true"></i>&nbsp; Share
    </button>
  {{/if}}
{{/if}}
