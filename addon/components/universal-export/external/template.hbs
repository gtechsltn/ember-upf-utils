<div class="modal-body upf-align--center">
  {{#input-wrapper}}
    <label class="padding-xx-sm">
      Export a selection of influencers to a list, emailing, campaign or stream
    </label>

    {{universal-selection
      current=current multiple=false placeholder=placeholder canCreate=true
      createItemComponent="universal-export/create-item"
      displayEmptyEntities=true}}

    {{#if errors}}
      <div class="alert alert-danger">
        {{#each errors as |error|}}
          <p>{{error}}</p>
        {{/each}}
      </div>
    {{/if}}
  {{/input-wrapper}}
</div>

<div class="modal-footer">
  {{#loading-button
    current slowAction="submit" initiallyDisabled=disabledExport
    class="margin-left-xx-sm upf-btn upf-btn--primary"}}
    Move to selected list
  {{/loading-button}}
</div>
