<div class="modal-body text-center">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      {{item-chooser items=items selection=current
                     recordTypeIsModel=false canCreate=_canCreate
                     optionValuePath='content.identifier'
                     createOptionPlaceholder=createOptionPlaceholder
                     didCreate=(action 'didCreateItem') placeholder=placeholder}}

      {{#if errors}}
        <div class="alert alert-danger">
          {{#each errors as |error|}}
            <p>{{error}}</p>
          {{/each}}
        </div>
      {{/if}}
    </div>
  </div>
</div>

<div class="modal-footer">
  {{#loading-button current slowAction='submit' initiallyDisabled=disabledExport
                    class='margin-left-xx-sm upf-btn upf-btn--primary'}}
    Export Influencers
  {{/loading-button}}
</div>
