<div class="modal-body text-center">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      {{item-chooser items=items selection=currentList canCreate=true
                     optionValuePath='content.id' recordType='list'
                     placeholder='Pick or create a list'}}
    </div>
  </div>
</div>

<div class="modal-footer">
  {{#loading-button currentList slowAction='submit' initiallyDisabled=disabledExport
                    class='margin-left-xx-sm upf-btn upf-btn--primary'}}
    Export Influencers
  {{/loading-button}}
</div>
