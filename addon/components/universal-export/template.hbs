{{#modal-view hidden=hidden closeAction=closeModal}}
  <div class="modal-header modal-header__borderless">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
            id="close-x"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">{{t "export_influencers.title"}}</h4>
  </div>

  <ul class="nav nav-tabs">
    {{#if tabs.external}}
      <li {{action "setCurrent" "external"}} class={{if externalSelected "active" ""}} role="button">
        <a>{{t "export_influencers.tabs.in_app"}}</a>
      </li>
    {{/if}}

    {{#if tabs.file}}
      <li {{action "setCurrent" "file"}} class={{if fileSelected "active" ""}} role="button">
        <a>{{t "export_influencers.tabs.file"}}</a>
      </li>
    {{/if}}
  </ul>

  {{#if fileSelected}}
    {{universal-export/file
      closeModal=closeModal enableFullFileExport=tabs.full_file
      enableOverlapFileExport=tabs.overlap_file
      selectedCount=selectedInfluencerIds.length}}
  {{else}}
    {{universal-export/external
      closeModal=closeModal selectedCount=selectedCount
      performExport=(action "performExport")}}
  {{/if}}
{{/modal-view}}
