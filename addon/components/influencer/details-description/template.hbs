<div class="info-bar">
  <div class="media-left media-middle">
    <img class='media-object img-circle details-description__avatar' src={{profile.avatar_url}}>
  </div>

  <div class='media-body margin-left-x-sm'>
    <span class='text-size-5 text-style-bold'>
      {{profile.name}} {{#if displayLink}} - {{#smart-link-to link=link}}{{fa-icon 'bar-chart'}}{{/smart-link-to}}{{/if}}
    </span>

    {{#display-field url=profile.email_link value=profile.email}}
      <span class='details-description__address text-size-4 margin-left-xxx-sm
                   padding-left-xx-sm'>
        {{profile.address}}
      </span>
    {{/display-field}}
  </div>

  <div class="media-right">
    <a {{action 'close'}} class='upf-link--reset details-description__panel-closer'>
      {{fa-icon 'close' class='text-size-5'}}
    </a>
  </div>
</div>
