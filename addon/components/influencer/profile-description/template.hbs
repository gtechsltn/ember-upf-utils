<div class="profile-picture">
  {{#if isSelectable}}
    {{#toggle-area value=profile.selected}}
      <img src={{profile.avatar_url}}>
    {{/toggle-area}}
  {{else}}
    <img src={{profile.avatar_url}}>
  {{/if}}
</div>
<div class="profile-description-content">
  <h4 class="profile-description-title">{{profile.name}} {{#if profile.isNew}}<span class="label label-primary">New</span>{{/if}}</h4>
  {{display-field url=profile.email_link value=profile.email}}
  <p class="addr">{{display-field value=profile.address}}</p>
  <p class="desc">{{profile.description}}</p>
  {{yield}}
</div>
