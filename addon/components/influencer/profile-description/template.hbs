<div class="media-left">
  {{#toggle-area value=profile.selected classNames="selection-container"}}
    <img class="media-object" src={{profile.avatar_url}}>
    <div class="selection-overlay">
      <p>{{fa-icon 'check'}}</p>
    </div>
  {{/toggle-area}}
</div>
<div class="media-body">
  <h4 class="media-heading">{{profile.name}} {{#if profile.isNew}}<span class="label label-primary">New</span>{{/if}}</h4>
  {{display-field url=profile.email_link value=profile.email}}
  <p class="addr">{{display-field value=profile.address}}</p>
  <p class="desc">{{profile.description}}</p>
  {{#if isList}}
    {{profile-lists profile=profile}}
  {{else}}
    {{quick-list profile=profile}}
  {{/if}}
</div>
