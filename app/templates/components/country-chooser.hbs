<div class="form-element country-chooser">
  <label>{{this.label}}</label>

  {{item-chooser
    items=this.codes multiple=this.multiple placeholder=this.placeholder searchField="name"
    selection=this._selection class=(if this.dark "item-chooser--dark") size=this.size
    onSelect=this.args.onCountrySelection}}
</div>
